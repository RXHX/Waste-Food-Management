<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    tools:context=".ViewProfile">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="124dp"
        android:layout_height="38dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="51dp"
        android:text="@string/txtHobbies"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/txtHobb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHobb"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="30dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="54dp"
        android:text="@string/favFood"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/txtFood"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="25dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/txtHobb" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="151dp"
        android:layout_height="36dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="35dp"
        android:text="@string/txtstdopt"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/txtStudOpt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/txtStudOpt"
        android:layout_width="166dp"
        android:layout_height="36dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="29dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFood" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="148dp"
        android:layout_height="39dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="37dp"
        android:text="@string/txtstdId"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/txtStudId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/txtStudId"
        android:layout_width="168dp"
        android:layout_height="35dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="36dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStudOpt" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="191dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="11dp"
        android:text="@string/txtstdorg"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/txStudOrg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/txStudOrg"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="21dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStudId" />

    <Button
        android:id="@+id/Back"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="45dp"
        android:text="@string/btnBackProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>